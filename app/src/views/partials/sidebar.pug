// Sidebar Scroll Container
#sidebar-scroll
  // Sidebar Content
  // Adding .sidebar-mini-hide to an element will hide it when the sidebar is in mini mode
  .sidebar-content
    // Side Header
    .side-header.side-content.bg-white-op
      button#closeMiniSubmenu.btn.btn-link.text-gray.pull-right.hidden-md.hidden-lg(type='button')
        i.fa.fa-times
      a.h5.text-white(href='/app/dashboard')
        img(src='/app/oneui/assets/img/practicewin-logo-small.png', style='height:32px;float:left;')
    // END Side Header
    // Side Content
    .side-content
      ul.nav-main
        li
          a(href='/app/welcome')
            i.si.si-rocket
            span.sidebar-mini-hide Welcome
        li
          a(href='/app/dashboard')
            i.si.si-speedometer
            span.sidebar-mini-hide Dashboard
        if accountRights.appointments
          li
            a(href='/app/appointments')
              i.si.si-calendar
              span.sidebar-mini-hide Appointments
        if accountRights.campaigns
          li
            a(href='/app/campaigns')
              i.si.si-feed
              span.sidebar-mini-hide Campaigns


        li.nav-main-heading
          span.sidebar-mini-hide Patient Reviews
        li
          a(href='/app/dashboard')
            i.si.si-speedometer
            span.sidebar-mini-hide Overview
        li
          a(href='/app/pr/phi/patient-reviews')
            i.si.si-star
            span.sidebar-mini-hide Reviews
        li
          a.nav-submenu(href='#profilesSubMenu', data-toggle="collapse")
            i.si.si-user
            span.sidebar-mini-hide Profiles
          #profilesSubMenu.collapse
            a(href='/app/pr/profiles')
              i
              i.si.si-users
              span.sidebar-mini-hide View Profiles
            a(href='/app/pr/new-profile')
              i
              i.si.si-user
              span.sidebar-mini-hide New Profile
        if sitebuilderSites && sitebuilderSites.length > 0
          li.nav-main-heading
            span.sidebar-mini-hide Website
          each site in sitebuilderSites
            li
              a.menuitem-ellipsis(href='/app/sitebuilder/'+site.id)
                i.si.si-globe
                span.sidebar-mini-hide #{site.name}
        li.nav-main-heading
          span.sidebar-mini-hide Settings
        li
          a(href='/app/pr/phi/customize')
            i.si.si-question
            span.sidebar-mini-hide Customize Reviews
        li
          a.nav-submenu(href='#accountSubMenu', data-toggle="collapse")
            i.si.si-pin
            span.sidebar-mini-hide Account
          #accountSubMenu.collapse
            a(href='/app/profile')
              i
              i.si.si-pin
              span.sidebar-mini-hide Profile
            a(href='/app/subscription')
              i
              i.fa.fa-newspaper-o
              span.sidebar-mini-hide Subscription

        //- li
        //-   a
        //-     i.fa.fa-code
        //-     span.sidebar-mini-hide Website Widget
        li.nav-main-heading
          span.sidebar-mini-hide Help
        li
          a(href='/app/help')
            i.si.si-question
            span.sidebar-mini-hide Help
        li
          a(href='/app/privacy')
            i.si.si-lock
            span.sidebar-mini-hide Privacy
        li
          a(href='/app/agreement')
            i.si.si-info
            span.sidebar-mini-hide Agreement
        li
          a(href='/app/terms')
            i.si.si-bell
            span.sidebar-mini-hide Terms of Use
    // END Side Content
  // Sidebar Content
// END Sidebar Scroll Container
