extends ../layouts/layout.pug

block head
  title Subscribe

block styles
  link(rel='stylesheet', href='/app/lib/animate.css/animate.css')

block content
  style.
    /*========= Pricing ==========*/
    .pricing {
      border: solid 1px;
      border-radius: 5px;
      padding: 20px 30px;
      text-align: center;
      margin-bottom: 30px;
    }

    .pricing__title {
      margin-bottom: 20px;
    }

    .pricing__price {
      margin: 30px 0 20px;
      font-size: 30px;
      font-weight: bold;
    }

    .pricing__content ul {
      padding-left: 0;
      list-style: none;
      margin-bottom: 20px;
    }

    .pricing--featured {
      border: 0;
    }
    /*  =========== PRICING =========== */
    .pricing {
      border-color: #e1e4e7;
    }

    .pricing .pricing__title {
      color: #00A3C8;
    }

    .pricing .pricing__price {
      color: #FF196F;
    }

    .pricing:hover {
      border-color: #c5cbd0;
    }

    .pricing--featured {
      background-color: #00A3C8;
    }

    .pricing--featured .pricing__title {
      color: #fff;
    }

    .pricing--featured .pricing__price {
      color: #fff;
    }

    .pricing--featured .pricing__content li {
      color: #fff;
    }
  
  // ========== Pricing ==========
  section#pricing.row.how-it-works
    .container
      .row
        br
        br
        br
      .row.section-header.wow.fadeInUp
        .col-sm-6.col-sm-offset-3
          h2.text-center Subscribe for Patient Reviews
          br
          br
          br
          
      .plan-pricing
        .row
          .col-sm-8.col-sm-offset-2.col-md-4.col-md-offset-0
            .pricing.wow.zoomIn
              .pricing__header
                h4.pricing__title Patient Reviews
                h4.pricing__price
                  | $49/mo per
                  br
                  | provider or location
              // // end .pricing__header
              .pricing__content
                ul
                  li No start-up costs
                  li Unlimited providers or locations
                  li Cloud-based online platform
                  li HIPAA-compliant data center
                  li Mobile-friendly design
                  li Email and SMS text messages
                  li Yelp reviews
                  li Google+ reviews
                  li HealthGrades reviews
                  li Vitals reviews
                  li Facebook reviews
                  li Online reputation score
                  li Reputation monitoring
                  li Reputation change alerts
                  li Website ratings widget
              .pricing__cta
