#flash
  - var shitHappends = !hasStripeId || accountRights._empty || accountProfiles.length == 0
  if shitHappends
    .alert.alert-info.alert-dismissable
      button.close(type='button', data-dismiss='alert', aria-hidden='true')
        i.fa.fa-times-circle-o
      if accountRights._empty
        p.flashmsg
          strong
            i.fa.fa-lg.fa-info-circle
          | &nbsp;&nbsp; No account information created for you. Please call support.
      if !hasStripeId
        p.flashmsg
          strong
            i.fa.fa-lg.fa-info-circle
          | &nbsp;&nbsp; Stripe ID is not associated with your account. Please call support.
      if accountProfiles.length == 0
        p.flashmsg
          strong
            i.fa.fa-lg.fa-info-circle
          | &nbsp;&nbsp; Your account has no profiles assigned.
  if messages.error
    .alert.alert-danger.alert-dismissable
      button.close(type='button', data-dismiss='alert', aria-hidden='true')
        i.fa.fa-times-circle-o
      for error in messages.error
        p.flashmsg
          strong
            i.fa.fa-lg.fa-exclamation-triangle
          | &nbsp;&nbsp;#{error.msg}
  if messages.warning
    .alert.alert-warning.alert-dismissable
      button.close(type='button', data-dismiss='alert', aria-hidden='true')
        i.fa.fa-times-circle-o
      for warning in messages.warning
        p.flashmsg
          strong
            i.fa.fa-lg.fa-exclamation-triangle
          | &nbsp;&nbsp;#{warning.msg}
  if messages.info
    .alert.alert-info.alert-dismissable
      button.close(type='button', data-dismiss='alert', aria-hidden='true')
        i.fa.fa-times-circle-o
      for info in messages.info
        p.flashmsg
          strong
            i.fa.fa-lg.fa-info-circle
          | &nbsp;&nbsp;#{info.msg}
  if messages.success
    .alert.alert-success.alert-dismissable
      button.close(type='button', data-dismiss='alert', aria-hidden='true')
        i.fa.fa-times-circle-o
      for success in messages.success
        p.flashmsg
          strong
            i.fa.fa-lg.fa-check-circle
          | &nbsp;&nbsp;#{success.msg}
  if (!_.isEmpty(flash))
    .alert.alert-info.alert-dismissable
      button.close(type='button', data-dismiss='alert', aria-hidden='true')
        i.fa.fa-times-circle-o
      p.flashmsg
        strong
          i.fa.fa-lg.fa-info-circle
        | &nbsp;&nbsp;#{flash}
