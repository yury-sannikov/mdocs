// Sidebar Scroll Container
#sidebar-scroll
  // Sidebar Content
  // Adding .sidebar-mini-hide to an element will hide it when the sidebar is in mini mode
  .sidebar-content
    // Side Header
    .side-header.side-content.bg-white-op
      button#closeMiniSubmenu.btn.btn-link.text-gray.pull-right.hidden-md.hidden-lg(type='button')
        i.fa.fa-times
      a.h5.text-white(href='/app/dashboard')
        img(src='/app/oneui/assets/img/practicewin-logo-small.png', style='height:32px;float:left;')
    // END Side Header
    // Side Content
    .side-content
      ul.nav-main
        include sidebar_common.pug

        if accountRights.patientreview
          li.nav-main-heading
            span.sidebar-mini-hide Patient Reviews
          li
            a(href='/app/dashboard')
              i.si.si-speedometer
              span.sidebar-mini-hide Overview
          li
            a(href='/app/pr/phi/patient-reviews')
              i.si.si-star
              span.sidebar-mini-hide Reviews
          li
            a.nav-submenu(href='#profilesSubMenu', data-toggle="collapse")
              i.si.si-user
              span.sidebar-mini-hide Profiles
            #profilesSubMenu.collapse
              a(href='/app/pr/profiles')
                i
                i.si.si-users
                span.sidebar-mini-hide View Profiles
              a(href='/app/pr/new-profile')
                i
                i.si.si-user
                span.sidebar-mini-hide New Profile
          li
            a(href='/app/pr/customize')
              i.si.si-question
              span.sidebar-mini-hide Customize Reviews
        if sitebuilderSites && sitebuilderSites.length > 0
          li.nav-main-heading
            span.sidebar-mini-hide Website
          each site in sitebuilderSites
            li
              a.menuitem-ellipsis(href='/app/sitebuilder/'+site.id)
                i.si.si-globe
                span.sidebar-mini-hide #{site.name}
        li.nav-main-heading
          span.sidebar-mini-hide Settings
        li
          a.nav-submenu(href='#accountSubMenu', data-toggle="collapse")
            i.si.si-pin
            span.sidebar-mini-hide My Account
          #accountSubMenu.collapse
            a(href='/app/profile')
              i
              i.si.si-pin
              span.sidebar-mini-hide Settings
            a(href='/app/subscription')
              i
              i.fa.fa-newspaper-o
              span.sidebar-mini-hide Subscription

        include sidebar_misc.pug
