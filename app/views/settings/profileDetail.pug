extends ../layouts/layout.pug

block head
  title #{application} &middot; Profile Detail

block content
  .container
    .row
      .col-sm-6.col-sm-offset-3
        br
        br
        legend
          h2 Profile Overview
          hr
          p
            strong Name&nbsp;&nbsp;&nbsp;
            | #{profile.name}
          p
            strong Type&nbsp;&nbsp;&nbsp;
            | #{profile.type}
          - if(!_.isEmpty(profile.address))
            p
              strong Address&nbsp;&nbsp;&nbsp;
              | #{profile.address}
          p
            strong Email&nbsp;&nbsp;&nbsp;
            | #{profile.email}
          p
            strong Phone&nbsp;&nbsp;&nbsp;
            | #{formatPhone(profile.phone)}

          hr
          hr
          h2 Review Sites
          hr
          - if(!_.isEmpty(profile.review_sites.yelp))
            p
              strong Yelp ID&nbsp;&nbsp;&nbsp;
              | #{profile.review_sites.yelp}                  
          - if(!_.isEmpty(profile.review_sites.google))
            p
              strong Google ID&nbsp;&nbsp;&nbsp;
              | #{profile.review_sites.google}
          - if(!_.isEmpty(profile.review_sites.healthgrades))
            p
              strong HealthGrades.com ID&nbsp;&nbsp;&nbsp;
              | #{profile.review_sites.healthgrades}
          - if(!_.isEmpty(profile.review_sites.vitals))
            p
              strong Vitals.com ID&nbsp;&nbsp;&nbsp;
              | #{profile.review_sites.vitals}
          - if(!_.isEmpty(profile.review_sites.ratemds))
            p
              strong RateMDs.com ID&nbsp;&nbsp;&nbsp;
              | #{profile.review_sites.ratemds}
          - if(!_.isEmpty(profile.review_sites.yellowpages))
            p
              strong YellowPages ID&nbsp;&nbsp;&nbsp;
              | #{profile.review_sites.yellowpages}

        hr
        a.btn.btn-success(href='/app/pr/profiles')
          i.fa.fa-check
          | &nbsp;Go Back
