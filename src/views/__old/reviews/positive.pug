extends ../layouts/layout

block head
  title #{application} &middot; Submit a Review

block content
  .container
    .row
      .col-sm-6.col-sm-offset-3
        br
        br
        form(method='POST')
          input(type='hidden', name='_csrf', value=_csrf)
          legend
            h2 Review Details
            p.small Thank you for your review. We would love to get your help and spread the word on Yelp. Please use the link below to post your review on Yelp.
          .row
            .col-sm-12(style='background: #c41200; border-radius:4px')
              .form-group
                a.btn.btn-block.btn-social.btn-lg(style='color:white;margin:4%;border:4px')
                  i.fa.fa-fw.fa-yelp(style='font-size:200%')
                  span(style='font-size:150%') &nbsp;Review us on Yelp

        hr
        p.text-muted <em>#{application}
          a(href='/terms')  Terms of Use
          |  and
          a(href='/privacy')  Privacy Policy.</em>
