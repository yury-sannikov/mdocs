mixin star_mixin(rate)
  - for (var i = 0; i < 5; ++i) {
    if (i < rate) && ((i + 1) <= rate)
      i.fa.fa-star
    else if (i < rate) && ((i + 0.1) <= rate)
      i.fa.fa-star-half-o
    else 
      i.fa.fa-star-o
  - }

