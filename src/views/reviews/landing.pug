extends ../layouts/layout.pug

block head
  title #{application} &middot; Submit a Review

block content
  .container
    .row
      .col-sm-6.col-sm-offset-3
        br
        br
        form(method='POST')
          input(type='hidden', name='_csrf', value=_csrf)
          legend
            h2 Submit a Review
          each question, i in survey.questions
            .row
              .col-md-6
                h3 #{question}
              .col-md-6
                span(style='font-size: 40px;color:gold;')
                  +star_mixin(0, i)
          hr
          a.btn.btn-success(href='signup')
            i.fa.fa-check
            | &nbsp;Submit Review

        hr
        p.text-muted <em>#{application}
          a(href='/terms')  Terms of Use
          |  and
          a(href='/privacy')  Privacy Policy.</em>
