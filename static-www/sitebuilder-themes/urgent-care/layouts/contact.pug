doctype html
html(lang="en")
  head
    include ../partials/header.pug
  body.PARALLAX
    include ../partials/navbar.pug
    .main-content(style='margin:10px 10px 0 10px;')
      .divider
        .container
          .row
            .col-md-4
              .row
                .col-xs-12.col-sm-12.col-md-12
                  .icon-box.left.media.bg-deep.p-30.mb-20
                    a.media-left.pull-left(href='#')
                      i.pe-7s-map-2.text-theme-colored
                    .media-body
                      strong OUR OFFICE LOCATION
                      p                         
                        | #{practice.address}
                        br
                        | #{practice.city}, #{practice.state} #{practice.zip}
                        br
                        a(href="http://maps.google.com/maps?daddr=" + practice.address +", " + practice.city +", " + practice.state + practice.zip + "&hl=en", target="_blank") GET DIRECTIONS â€º
                .col-xs-12.col-sm-6.col-md-12
                  .icon-box.left.media.bg-deep.p-30.mb-20
                    a.media-left.pull-left(href='#')
                      i.pe-7s-call.text-theme-colored
                    .media-body
                      strong OUR CONTACT NUMBER
                      p #{practice.phone}
                .col-xs-12.col-sm-6.col-md-12
                  .icon-box.left.media.bg-deep.p-30.mb-20
                    a.media-left.pull-left(href='#')
                      i.text-theme-colored.fa.fa-fax                      
                    .media-body
                      strong OUR FAX
                      p #{practice.fax}
                .col-xs-12.col-sm-6.col-md-12
                  .icon-box.left.media.bg-deep.p-30.mb-20
                    a.media-left.pull-left(href='#')
                      i.text-theme-colored.fa.fa-clock-o
                    .media-body
                      strong OUR HOURS
                      p
                        | Mon: #{practice.hours.mon}<br>
                        | Tue: #{practice.hours.tue}<br>
                        | Wed: #{practice.hours.wed}<br>
                        | Thu: #{practice.hours.thu}<br>
                        | Fri: #{practice.hours.fri}<br>
                        | Sat: #{practice.hours.sat}<br>
                        | Sun: #{practice.hours.sun}
                    
            .col-md-8
              h3.mt-0.mb-30 Contact Us
              // Contact Form
              form.js-bookonline-form(action='', data-callback='makeappointmentform_submit', method='post')
                .row
                  .col-sm-6
                    .form-group
                      label(for='form_name')
                        | Name
                        small *                     
                      input#form_name.form-control(name='fullname', type='text', placeholder='Enter Name' required='')
                  .col-sm-6
                    .form-group
                      label(for='form_email')
                        | Email
                        small *
                      input#form_email.form-control.required.email(name='email', type='email', placeholder='Enter Email', required='')
                .row                  
                  .col-sm-6
                    .form-group
                      label(for='form_phone') 
                        | Phone
                        small * 
                      input#form_phone.form-control(name='phone', type='text', placeholder='Enter Phone', required='')
                .form-group                 
                  button.js-bookonline-submit.btn.btn-dark.btn-theme-colored.btn-flat.mr-5(type='submit', data-loading-text='Please wait...') Send your message
                  

              // Contact Form
      section
        .container-fluid.p-0
          .row
            .text-center
              h2.font-playfair.text-uppercase.mt-0.mb-10 Find Us
              img.mb-10(src='/assets/images/title-icon.png', alt='')
            .map-canvas.autoload-map(data-address= practice.address, data-popupstring-id='#popupstring1', data-mapstyle='style2', data-height='420', data-latlng= practice.latlon, data-title='Practice Address', data-zoom='12', data-marker='/assets/images/map-marker.png')
              #popupstring1.map-popupstring.hidden
                .text-center
                  h4= practice.name
                  p= practice.address
                    br
                    span= practice.city 
                    |, 
                    span= practice.state
                    |  
                    span= practice.zip
                    br
                    | Phone: 
                    span= practice.phone
                    br
                    | Fax: 
                    span= practice.fax
                    br
                    | Email: 
                    span= practice.email
              script(src='http://maps.google.com/maps/api/js?key=AIzaSyAYWE4mHmR9GyPsHSOVZrSCOOljk8DU9B4')
              script(src='/assets/js/google-map-init.js')
