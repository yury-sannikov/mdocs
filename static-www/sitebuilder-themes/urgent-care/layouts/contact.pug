doctype html
html(lang="en")
  head
    include ../partials/header.pug
  body.PARALLAX
    include ../partials/navbar.pug
    .main-content(style='margin:10px 10px 0 10px;')
      .divider
        .container.pt-30
          h1.mt-0.mb-30 Contact Us
          .row
            .col-md-4
              .row
                .col-xs-12.col-sm-12.col-md-12
                  .icon-box.contact-icon-box.left.media.bg-deep.p-30.mb-20
                    a.media-left.pull-left(href='#')
                      i.pe-7s-map-2.text-theme-colored
                    .media-body.contact-media-body
                      strong OUR OFFICE LOCATION
                      p
                        | #{practice.address}
                        br
                        | #{practice.city}, #{practice.state} #{practice.zip}
                        br
                        a(href="http://maps.google.com/maps?daddr=" + practice.address +", " + practice.city +", " + practice.state + practice.zip + "&hl=en", target="_blank") GET DIRECTIONS â€º
                .col-xs-12.col-sm-6.col-md-12
                  .icon-box.contact-icon-box.left.media.bg-deep.p-30.mb-20
                    a.media-left.pull-left(href='#')
                      i.pe-7s-call.text-theme-colored
                    .media-body.contact-media-body
                      strong OUR CONTACT NUMBER
                      p #{practice.phone}
                .col-xs-12.col-sm-6.col-md-12
                  .icon-box.contact-icon-box.left.media.bg-deep.p-30.mb-20
                    a.media-left.pull-left(href='#')
                      i.text-theme-colored.fa.fa-fax
                    .media-body.contact-media-body
                      strong OUR FAX
                      p #{practice.fax}
                .col-xs-12.col-sm-6.col-md-12
                  .icon-box.contact-icon-box.left.media.bg-deep.p-30.mb-20
                    a.media-left.pull-left(href='#')
                      i.text-theme-colored.fa.fa-clock-o
                    .media-body.contact-media-body
                      strong OUR HOURS
                      p
                        | Mon: #{practice.hours.mon}<br>
                        | Tue: #{practice.hours.tue}<br>
                        | Wed: #{practice.hours.wed}<br>
                        | Thu: #{practice.hours.thu}<br>
                        | Fri: #{practice.hours.fri}<br>
                        | Sat: #{practice.hours.sat}<br>
                        | Sun: #{practice.hours.sun}

            .col-md-8
              form.js-bookonline-form(action='', data-callback='makeappointmentform_submit', method='post')
                input(style='display:none;', name='systype', value='message')
                .row
                  .col-sm-6
                    .form-group
                      label(for='firstname')
                        | First Name
                        small *
                      input#firstname.form-control(name='firstname', type='text', placeholder='Enter First Name' required='')
                  .col-sm-6
                    .form-group
                      label(for='lastname')
                        | Last Name
                        small *
                      input#lastname.form-control(name='lastname', type='text', placeholder='Enter Last Name' required='')
                .row
                  .col-sm-6
                    .form-group
                      label(for='email')
                        | Email
                        small *
                      input#email.form-control.required.email(name='email', type='email', placeholder='Enter Email', required='')
                  .col-sm-6
                    .form-group
                      label(for='phone')
                        | Phone
                        small *
                      input#phone.form-control(name='phone', type='text', placeholder='Enter Phone', required='')
                .row
                  .col-sm-12
                    .form-group
                      label(for='comment')
                        | Comment
                      textarea#comment.form-control(name='comment', placeholder='Enter Comment', rows='4')
                .form-group
                  input(name="systype" type="hidden" value="message")
                  input.mb-20.js-bookonline-submit.btn.btn-dark.btn-theme-colored.btn-flat.mr-5(type='submit', data-loading-text='Please wait...', value='Send your message')

              .map-canvas.autoload-map(data-address= practice.address, data-popupstring-id='#popupstring1', data-mapstyle='style2', data-height='264', data-latlng= practice.latlon, data-title='Practice Address', data-zoom='12', data-marker='/assets/images/map-marker.png')
                #popupstring1.map-popupstring.hidden
                  .text-center
                    h4= practice.name
                    p= practice.address
                      br
                      span= practice.city
                      |,
                      span= practice.state
                      |&nbsp;
                      span= practice.zip
                      br
                      | Phone:
                      span= practice.phone
                      br
                      | Fax:
                      span= practice.fax
                      br
                      | Email:
                      span= practice.email
                script(src='http://maps.google.com/maps/api/js?key=AIzaSyAYWE4mHmR9GyPsHSOVZrSCOOljk8DU9B4')
                script(src='/assets/js/google-map-init.js')
    script(type='text/javascript', src='/assets/widgets/bookonline/index.js', data-profileid=practice.mdocsAccount)
    include ../partials/footer.pug
