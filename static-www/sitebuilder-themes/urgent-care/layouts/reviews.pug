doctype html
html(lang="en")
  head
    include ../partials/header.pug
  body.PARALLAX
    include ../partials/navbar.pug
    .main-content(style='margin:10px;')
      .container
        section(style="padding-bottom: 60px")
          section.testimonials-reviews.pinstripe
            .row.mb-50
              .right
                h1 Patient Reviews
                .service-description Our clinic always appreciates feedback from our valued patients. To date, we’re thrilled to have collected hundreds of reviews with an average rating of 5 out of 5 stars. Please read what others are saying about us below, and as always, we would love to get your feedback.
                ul.booking-options
                  li
                    button.btn-leave-review.btn.btn-colored.btn-flat.btn-theme-colored.mt-15(type='button', data-toggle='modal', data-target='#sendreview')
                      | Leave Review
                      
                    #sendreview.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
                      .modal-dialog(role='document')
                        .modal-content
                          .modal-header
                            button.close(type='button', data-dismiss='modal', aria-label='Close')
                              span(aria-hidden='true') ×
                            h4#myModalLabel.modal-title Leave Review
                          .modal-body
                            form.js-bookonline-form(action='', data-callback='makeappointmentform_submit', method='post')
                              input.form-control(name='fullname', type='text', placeholder='Your fullname')
                              br 
                              input.form-control(name='phone', type='text', placeholder='Your phone')
                              br
                              input.form-control(name='email', type='text', placeholder='Your email')
                              br
                              input.js-bookonline-submit.btn.btn-colored.btn-flat.btn-theme-colored.mt-15(type='submit', value='Submit')
              .clear-40
            .row
              ol.commentlist
                each review in reviews
                  li.comment.mb-15
                    .media
                      .media-body
                        ul.review_text.list-inline
                          li
                            .star-rating
                              case review.rate
                                when 1
                                  span(style='width: 20%;')
                                when 2
                                  span(style='width: 40%;')
                                when 3
                                  span(style='width: 60%;')
                                when 4
                                  span(style='width: 80%;')
                                when 5
                                  span(style='width: 100%;')
                          li
                            h5.media-heading.meta
                              span.author
                                strong
                                  = review.user
                              |  – #{review.date}:
                        p= review.text

    include ../partials/footer.pug

