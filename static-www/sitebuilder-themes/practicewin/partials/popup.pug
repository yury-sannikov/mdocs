#popup-content.white-popup-block.popup-content.mfp-hide
  .pop-header.align-c.pd-b-0(data-rgen-sm='pd-20')
    p.sq90.inline-flex.flex-cc.fs80.mr-0.txt-color1
      i.pe-7s-mail
    h2.title.mr-0(data-rgen-sm='small') SCHEDULE A DEMO
  .pop-body(data-rgen-sm='pd-20')
    .form-block
      form.form-widget.js-bookonline-form(action='', method='post', data-callback='form_submit', data-callback-beforesubmit="form_before_submit")
        input(name="systype" type="hidden" value="message")
        input(name="profileId" type="hidden" value=practice.mdocsProfile)
        .field-wrp
          .form-group
            input.form-control(data-label='Name', required='', data-msg='Please enter name.', type='text', name='fullname', placeholder='Enter your name')
          .form-group
            input.form-control(data-label='Email', required='', data-msg='Please enter email.', type='email', name='email', placeholder='Enter your email')
          .form-group
            input.form-control(required='', data-label='Phone', data-msg='Please phone number.', type='text', name='phone', placeholder='Enter your phone number')
          .form-group
            input.form-control(data-label='Subject', required='', data-msg='Please enter subject.', type='text', name='comment', placeholder='Enter subject')
          .form-group
            textarea.form-control(data-label='Message', required='', data-msg='Please enter your message.', name='description', placeholder='Add your message', cols='30', rows='10')
        button.btn.btn-default.block.js-bookonline-submit(type='button')
          i.fa.fa-envelope-o
          input.js-bookonline-submit(type='submit', value='Submit', style='border:0px; background:transparent;')

  script.
    $(function(){
      $("a.set-popup").click(function() {
        $('input.js-bookonline-submit').attr('value','Submit');
        $('input.js-bookonline-submit').attr('disabled',false);
      });
    }); 

    function form_before_submit() {
        $('input.js-bookonline-submit').attr('value','Sending...');
        $('input.js-bookonline-submit').attr('disabled',true);
    }

script(type='text/javascript', src='/assets/widgets/bookonline/index.js', data-profileid=practice.mdocsAccount)
