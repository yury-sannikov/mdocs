block styles
  style.
    .sticky-wrapper {
      position: fixed;
      width: 100%;
      left: 0;
      bottom: 0;
      z-index: 100;
      border-top: 0;
      padding: 20px 0;
    }
    .background {
      background-color: yellow;
      opacity: 0.8;
      width: 100%;
      height: 100%;
      display: block;
      position: absolute;
      top: 0;
      z-index: -1;
    }
    .content {
      padding-left: 80px;
      display: inline-block;
    }
    .content .col {
      display: inline-block;
    }

    .content .col-text {
      min-width: 180px;
    }

    .content .col-btn a {
      display: inline-block;
      height: 35px;
      border: 2px solid #600;
      border-radius: 6px;
      background-color: #e00;
      color: white;
      width: 150px;
      text-align: center;
      padding-top: 8px;
      text-decoration: none;
    }
    .content p {
      color: black;
      font-size: larger;
    }
    .content .col-close a {
      color: black;
      font-size: larger;
      padding-left: 25px;
      text-decoration: underline;
    }

.sticky-wrapper
  .content
    .col.col-text
      p Preiview Mode
    .col.col-btn
      a(href=deployOptions.deployUrl type="button") Deploy Website
    .col.col-close
      a(href="#" onclick="javascript:window.close();return false;") Back to SiteBuilder
  .background
